set timeout 5

spawn @sbindir@/pkcsep11_session vhsmpin -slot [lindex $argv 0]
expect {
    "Enter the USER PIN:" { sleep .1; send "01234567\r"; }
    eof { exit 1 }
    timeout { exit 1 }
}
expect {
    "Enter the new VHSM PIN:" { sleep .1; send "0123456789\r"; }
    eof { exit 1 }
    timeout { exit 1 }
}
expect {
    "VHSM-pin successfully set." { exit 0 }
    eof { exit 1 }
    timeout { exit 1 }
}
